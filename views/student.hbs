                <input
                  type="radio"
                  name="status"
                  value="Full Time"
                  checked
                />Full Time
              </label>
              <label>
                <input type="radio" name="status" value="Part Time" />Part Time
              </label>
            {{/equal}}
            {{#equal student.status "Part Time"}}
